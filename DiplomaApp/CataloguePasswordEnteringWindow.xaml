<Window x:Class="DiplomaUI.CataloguePasswordEnteringWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiplomaApp"
        mc:Ignorable="d"
        Title="Окно ввода пароля" Height="100" Width="310" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Label DockPanel.Dock="Top" Content="Введите пароль" HorizontalAlignment="Center" FontSize="14"/>
        <DockPanel Margin="5 5 5 5" DockPanel.Dock="Bottom" HorizontalAlignment="Stretch">
            <TextBox x:Name="pwdTB" HorizontalAlignment="Stretch" Width="215"></TextBox>
            <Button Click="Button_Click" Margin="5 0 0 0" Content="Ввести" Width="70" 
                    IsDefault="True" HorizontalAlignment="Right"/>
        </DockPanel>
    </DockPanel>
</Window>
