<Window x:Class="DiplomaUI.View.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:DiplomaUI.ViewModel"
        xmlns:uc="clr-namespace:DiplomaUI.View"
        xmlns:proxy="clr-namespace:DiplomaUI.Infrastructure.Proxies"
        xmlns:conv="clr-namespace:DiplomaUI.Infrastructure.Converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1420" Background="#FFF3F3F3">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <proxy:BindingProxy x:Key="Proxy" Data="{Binding}"/>
        <conv:IsEnabledConverter x:Key="IsEnabledConv"/>
        <conv:ByteArrayToBitmapImageConverter x:Key="byteToImageConverter"/>
        <conv:FileLoadedConverter x:Key="FileLoadedConv"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="330" MaxWidth="400" MinWidth="200"/>
        </Grid.ColumnDefinitions>
        <GridSplitter Width="3" HorizontalAlignment="Right"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
            </Grid.RowDefinitions>
            <DockPanel>
                <Border Margin="5 10" Background="#FFD6D6D6" BorderBrush="Black" BorderThickness="0" Visibility="{Binding ElementName=partitureGridView, Path=Visibility}">
                    <Grid DataContext="{Binding Partiture}" x:Name="partitureGridView" DockPanel.Dock="Left" Width="300" Visibility="Collapsed" Margin="30" VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.Resources>
                                <Style TargetType="{x:Type TextBox}">
                                    <Setter Property="Margin" Value="5"/>
                                    <Setter Property="FontSize" Value="14"/>
                                </Style>
                                <Style TargetType="{x:Type Label}">
                                    <Setter Property="FontSize" Value="14"/>
                                </Style>
                            </Grid.Resources>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label>Наименование:</Label>
                            <TextBox Grid.Column="1" Text="{Binding Path=Name}"></TextBox>
                            <Label Grid.Row="1">Автор:</Label>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Author}"></TextBox>
                            <Label Grid.Row="2">Стиль произведения:</Label>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Style}"></TextBox>
                            <Label Grid.Row="3">Тип произведения:</Label>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding WorkType}"></TextBox>
                            <Label Grid.Row="4">Для инструмента(-ов):</Label>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Instrumentation}"></TextBox>
                            <Label Grid.Row="5">Язык автора:</Label>
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Language}"></TextBox>
                            <Label Grid.Row="6">Партитура:</Label>
                            <Button Grid.Row="6" Grid.Column="1" Margin="5" FontSize="14" 
                                    Command="{Binding Source={StaticResource Proxy}, UpdateSourceTrigger=PropertyChanged, Path=Data.LoadFileCommand}" 
                                    CommandParameter="{Binding}"
                                    Content="{Binding File, Converter={StaticResource FileLoadedConv}}">
                            </Button>
                        </Grid>
                        <Border Grid.Row="1" Background="White" BorderBrush="Black" BorderThickness="1"
                                HorizontalAlignment="Stretch" Height="300" VerticalAlignment="Stretch" Margin="20 10">
                            <Image Source="{Binding Image, Converter={StaticResource byteToImageConverter}}"/>
                        </Border>
                        <Button Grid.Row="2" VerticalAlignment="Bottom" Margin="10" Height="30" Width="150" FontSize="14" 
                                Command="{Binding Source={StaticResource Proxy}, Path=Data.AddPartitureCommand}"
                                CommandParameter="{Binding}" Content="Подтвердить">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:ChangePropertyAction TargetObject="{Binding ElementName=partitureGridView}" 
                                                                PropertyName="Visibility" Value="Collapsed"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </Grid>
                </Border>
                <Border Background="White" DockPanel.Dock="Right" BorderThickness="2" BorderBrush="Black" Margin="10">
                    <ScrollViewer Height="710" Visibility="Visible" VerticalAlignment="Top" VerticalScrollBarVisibility="Hidden">
                        <ItemsControl ItemsSource="{Binding Partitures}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel></WrapPanel>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <uc:PartitureFormView></uc:PartitureFormView>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </DockPanel>
            <Button HorizontalAlignment="Right" Grid.Row="1" Width="150" Margin="5 0 5 5" Content="Добавить запись">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:ChangePropertyAction PropertyName="Visibility" Value="Visible" TargetObject="{Binding ElementName=partitureGridView}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
        </Grid>
        <Grid Margin="0 5 5 5" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.Resources></Grid.Resources>
            <TreeView ItemsSource="{Binding Items, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Path=Catalogues}">
                        <TextBlock Text="{Binding Path=Name}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PreviewMouseRightButtonDown">
                                    <i:ChangePropertyAction PropertyName="IsSelected" Value="True" TargetObject="{Binding}"/> 
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <TextBlock.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Удалить каталог" IsEnabled="{Binding Converter={StaticResource IsEnabledConv}}" Command="{Binding Source={StaticResource Proxy}, Path=Data.DeleteCatalogueCommand}"/>
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectedItemChanged">
                        <i:InvokeCommandAction Command="{Binding Data.GetCataloguePartitures, Mode=OneWay, Source={StaticResource Proxy}}"></i:InvokeCommandAction>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TreeView>
            <DockPanel Grid.Row="1" Margin="5">
                <Label Content="Наименование каталога:"/>
                <TextBox Name="catalogueName" Width="100" HorizontalAlignment="Left" Text="{Binding Path=Catalogue.Name}"></TextBox>
                <Button Margin="5 0 0 0" IsEnabled="{Binding ElementName=catalogueName, Path=Text.Length}" Command="{Binding AddCatalogueCommand}">Добавить</Button>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
