<UserControl x:Class="DiplomaUI.PartitureForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiplomaApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="450" Height="140">
        <Rectangle HorizontalAlignment="Left" Height="140" Stroke="Black" Fill="White" VerticalAlignment="Top" Width="450"/>
        <Image HorizontalAlignment="Left" Height="130" VerticalAlignment="Top" Width="120" Margin="5,5,0,0"/>
        <Grid HorizontalAlignment="Left" Width="310" Height="130" Margin="135,5,0,5">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label FontSize="14">Наименование:</Label>
            <Label Grid.Row="1" FontSize="14">Автор:</Label>
            <Button Grid.Row="4" Margin="5" HorizontalAlignment="Right" Width="120">Подробнее</Button>
        </Grid>
    </Grid>
</UserControl>
